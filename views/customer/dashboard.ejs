<!DOCTYPE html>
<html>
<head>
  <title>Customer Dashboard</title>

  <style>
    body {
      font-family: Arial;
      margin: 0;
      background: #f9fafb;
    }

    .header {
      background: #1f2937;
      color: white;
      padding: 15px;
      display: flex;
      justify-content: space-between;
    }

    .container {
      padding: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: left;
    }

    th {
      background: #f3f4f6;
    }

    button {
      padding: 6px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-right: 5px;
    }

    .stop { background: orange; color: white; }
    .resume { background: green; color: white; }
    .cancel { background: red; color: white; }

    .status-active { color: green; font-weight: bold; }
    .status-stopped { color: orange; font-weight: bold; }
    .status-cancelled { color: red; font-weight: bold; }
  </style>
</head>

<body>

<div class="header">
  <div>Welcome <%= customer.name %></div>
  <a href="/customer/logout" style="color:white;">Logout</a>
</div>

<div class="container">

  <h2>Your Subscriptions</h2>

  <table>
    <tr>
      <th>Product</th>
      <th>Frequency</th>
      <th>Status</th>
      <th>Total</th>
      <th>Created</th>
      <th>Action</th>
    </tr>

    <% customer.subscriptions.forEach(sub => { %>
      <tr>

        <td><%= sub.product %></td>
        <td><%= sub.frequency %></td>

        <td class="status-<%= sub.status %>">
          <%= sub.status %>
        </td>

        <td>â‚¹ <%= sub.totalAmount %></td>

        <td>
          <%= new Date(sub.createdAt).toDateString() %>
        </td>

        <td>
          <% if(sub.status === "active") { %>

            <form style="display:inline;" method="POST" action="/customer/subscription/<%= sub.id %>/stop">
              <button class="stop">Stop</button>
            </form>

            <form style="display:inline;" method="POST" action="/customer/subscription/<%= sub.id %>/cancel">
              <button class="cancel">Cancel</button>
            </form>

          <% } else if(sub.status === "stopped") { %>

            <form style="display:inline;" method="POST" action="/customer/subscription/<%= sub.id %>/resume">
              <button class="resume">Resume</button>
            </form>

            <form style="display:inline;" method="POST" action="/customer/subscription/<%= sub.id %>/cancel">
              <button class="cancel">Cancel</button>
            </form>

          <% } else { %>

            -

          <% } %>
        </td>

      </tr>
    <% }) %>

  </table>

</div>

</body>
</html>
